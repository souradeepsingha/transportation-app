<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start"
    android:id="@+id/drawerlayout"
    >


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Cab G"
                app:titleTextColor="#ffffff"
                app:navigationIcon="@drawable/baseline_menu_24"
                app:navigationIconTint="#ffffff"
                app:menu="@menu/toolbar_items"
                android:id="@+id/materialtoolbar"
                />



        </com.google.android.material.appbar.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:id="@+id/linearlayout1"
            >



            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:flipInterval="2000"
                android:autoStart="true"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"

                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:src="@drawable/car1"

                    />



                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car2"

                    />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car3"

                    />
            </ViewFlipper>






        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/tablayout1"

            >

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre-Booking"
                />


        </com.google.android.material.tabs.TabLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/framelayout"

            />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/animation_view"
               app:lottie_url="https://assets3.lottiefiles.com/packages/lf20_it6c3dgk.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>



        </LinearLayout>



</ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:id="@+id/linearlayou2"
            >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="0dp"

            android:id="@+id/framelayout2"

            />


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:id="@+id/linearlayou3"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"

                android:id="@+id/framelayout3"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:id="@+id/linearlayou4"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"

                android:id="@+id/framelayout4"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:id="@+id/linearlayou5"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"

                android:id="@+id/framelayout5"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:id="@+id/linearlayou6"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"

                android:id="@+id/framelayout6"

                />


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
android:layout_gravity="start"

    app:headerLayout="@layout/nav_head"


    app:menu="@menu/navitems"
    android:id="@+id/navigationbar"

    />







</androidx.drawerlayout.widget.DrawerLayout>